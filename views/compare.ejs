
<div class="ohh container my-5">

  <!-- HEADER -->
  <div class="mb-4 text-center">
    <h2 class="fw-bold text-white">Trip Comparison</h2>
    <p class="text-muted">
      Side-by-side comparison with AI-powered insight
    </p>
  </div>

  <!-- AI SUMMARY -->
  <div class="p-4 rounded-3 mb-5 shadow-sm" style="background-color: rgba(13, 202, 240, 0.15); border: 1px solid rgba(13, 202, 240, 0.3);">
  <h5 class="fw-bold mb-2" style="color: #0dcaf0;">
    ü§ñ TravelMind AI Summary
  </h5>
  <p class="mb-0 text-white" style="line-height: 1.6; opacity: 0.9;">
    <%= aiSummary %>
  </p>
</div>

  <!-- COMPARISON GRID -->
  <div class="row">

    <% trips.forEach(trip => { %>
      <div class="col-md-6 mb-4">

        <div class="card shadow-lg h-100">

          <!-- IMAGE -->
          <img
            src="<%= trip.image %>"
            class="img-fluid rounded-top"
            style="height:260px; object-fit:cover;"
          />

          <div class="card-body">

            <h4 class="fw-bold"><%= trip.name %></h4>
            <p class="text-muted"><%= trip.location %></p>

            <p>
              ‚≠ê <strong><%= trip.rating %></strong>
              (<%= trip.reviewsCount %> reviews)
            </p>

            <h5 class="text-success">
              ‚Çπ <%= trip.price %> / night
            </h5>

            <hr/>

            <h6>üè® Amenities</h6>
            <ul>
              <% (trip.amenities || []).forEach(a => { %>
                <li><%= a %></li>
              <% }) %>
            </ul>

            <h6>üéØ Ideal For</h6>
            <ul>
              <% (trip.details?.idealFor || []).forEach(i => { %>
                <li><%= i %></li>
              <% }) %>
            </ul>

            <h6>üìç Nearby</h6>
            <ul>
              <% (trip.details?.nearby || []).forEach(n => { %>
                <li><%= n %></li>
              <% }) %>
            </ul>

          </div>
        </div>

      </div>
    <% }) %>

  </div>

  <!-- CTA -->
  <div class="text-center mt-4">
    <a href="/" class="btn btn-outline-secondary me-2">
      ‚Üê Back to Results
    </a>

    <a href="/trip/<%= trips[0].id %>" class="btn btn-success">
      Continue with Best Choice
    </a>
  </div>

</div>
